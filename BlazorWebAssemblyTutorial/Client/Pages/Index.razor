@using BlazorWebAssemblyTutorial.Shared
@using Syncfusion.Blazor.Grids
@page "/"

<SfGrid DataSource="@Employees">
    <GridColumns>
        <GridColumn Field=@nameof(Employee.EmployeeId) HeaderText="ID"></GridColumn>
        <GridColumn Field=@nameof(Employee.FirstName) HeaderText="First Name"></GridColumn>
        <GridColumn Field=@nameof(Employee.LastName) HeaderText="Last Name"></GridColumn>
        <GridColumn Field=@nameof(Employee.Email) HeaderText="Email"></GridColumn>
    </GridColumns>
</SfGrid>

 @code{

     public List<Employee> Employees { get; set; }

     protected override void OnInitialized()
     {
         Employees = LoadData();
     }

     private List<Employee> LoadData()
     {
         Employee e1 = new Employee
         {
             EmployeeId = 1,
             FirstName = "Antonis",
             LastName = "Ion",
             Email = "antonis@alphaSoftware.com",
             DateOfBirth = new DateTime(1980, 10, 5),
             Gender = Gender.Male,
             Department = new Department { DepartmentId = 1, DepartmentName = "IT" },
             PhotoPath = "images/john.png"
         };

         Employee e2 = new Employee
         {
             EmployeeId = 2,
             FirstName = "Teo",
             LastName = "Mar",
             Email = "teo@alphaSoftware.com",
             DateOfBirth = new DateTime(1984, 11, 11),
             Gender = Gender.Male,
             Department = new Department { DepartmentId = 1, DepartmentName = "IT" },
             PhotoPath = "images/mary.png"
         };

         return new List<Employee> { e1, e2 };
     }
 }